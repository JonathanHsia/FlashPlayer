<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lyric_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_lyric_titile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/lyric"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <!-- 自定义歌词显示控件 -->

    <com.jonthanhsia.flashplayer.view.ShowLyricView
        android:id="@+id/lrcShowView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tv_lyric_titile"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_serarch_lyric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/download_point"
        android:textColor="@color/orange"
        android:textSize="18sp" />

</RelativeLayout>